{% extends 'base.html.twig' %}

{% block title %}Nous contacter
{% endblock %}

{% block body %}
	<h1>Nous contacter</h1>
	{% for voiture in voitures %}

	{{ form_start(form) }}
	{% if form.voiture.vars.value %}
    <p id="contact_sujet">Titre de la voiture sélectionnée : {{ form.voiture.vars.value.getTitre() }}</p>
{% endif %}
	{#{{form_row(form.nom)}}
	#}{{form_rest(form)}}

	{% endfor %}
	{{ form_end(form) }}
<pre>
	{{ dump(form) }}
</pre>
	<form id="contact-form" method="POST" action="{{ path('contact') }}">
		<div class="form-group">
			<label for="nom">Nom :</label>
			<input type="text" id="nom" name="nom" class="form-control">
		</div>
		<div class="form-group">
			<label for="prenom">Prénom :</label>
			<input type="text" id="prenom" name="prenom" class="form-control">
		</div>
		<div class="form-group">
			<label for="email">Adresse e-mail :</label>
			<input type="email" id="email" name="email" class="form-control">
		</div>
		<div class="form-group">
			<label for="numeroTelephone">Numéro de téléphone :</label>
			<input type="tel" id="numeroTelephone" name="numeroTelephone" class="form-control">
		</div>
		<div class="form-group">
			<label for="message">Message :</label>
			<textarea id="message" name="message" class="form-control"></textarea>
		</div>
		<div class="form-group">
			<label for="sujet">information du vehicule</label>
			<input id="contact_sujet" name="sujet" class="form-control">
		</div>


		<button class="contact" type="submit">
			Contact
		</button>

	</form>
{% endblock %}


{% block javascripts %}

	<script src="{{ asset('app.js') }}"></script>
{% endblock %}
