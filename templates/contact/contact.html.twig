{% extends 'base.html.twig' %}

{% block title %}Nous contacter
{% endblock %}

{% block body %}
<div class="container">
    	<h1>Nous contacter</h1>
    
    {# Afficher le formulaire en utilisant la fonction form() #}
    {{ form_start(form) }}
    
    {# Champ Sujet #}
    <div class="form-group">
        {{ form_label(form.sujet) }}
        {{ form_widget(form.sujet, {'value': voitureTitre}) }}
    </div>
    
    {# Champ Année de mise en circulation (désactivé) #}
    <div class="form-group">
        {{ form_label(form.anneeMiseCirculation) }}
        {{ form_widget(form.anneeMiseCirculation, {'value': voitureAnnee|date('d/m/Y')}) }}
    </div>
    
    {# Champ Nom #}
    {{ form_row(form.nom) }}
    
    {# Champ Prénom #}
    {{ form_row(form.prenom) }}
    
    {# Champ Email #}
    {{ form_row(form.email) }}
    
    {# Champ Message #}
    {{ form_row(form.message) }}
    
    {# Champ Numéro de téléphone #}
    {{ form_row(form.numeroTelephone) }}
    
    
    {# Bouton Envoyer #}
    {{ form_row(form.envoyer) }}
    
    {{ form_end(form) }}
</div>


{% endblock %}



